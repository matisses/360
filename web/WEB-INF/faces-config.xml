<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>tabla</from-outcome>
            <to-view-id>/compras/proforma/tabla.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <!--
    <render-kit>
        <renderer>
            <renderer-type>com.sun.faces.renderkit.html_basic.FileRenderer</renderer-type>
            <renderer-class>co.matisses.web.custom.MyFileUploadRenderer</renderer-class>
        </renderer>
    </render-kit>
    -->
    <!-- Inician reglas ccyga -->
    <navigation-rule>
        <from-view-id>/ccyga/*</from-view-id>
        <navigation-case>
            <from-outcome>empleado</from-outcome>
            <to-view-id>/ccyga/empleado/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>proceso</from-outcome>
            <to-view-id>/ccyga/proceso/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>producto</from-outcome>
            <to-view-id>/ccyga/producto/proceso/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>labor</from-outcome>
            <to-view-id>/ccyga/labor/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>laborsinproducto</from-outcome>
            <to-view-id>/ccyga/labor/sinproducto/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <!-- Finalizan reglas ccyga -->
    <!-- Inician reglas reposicion -->
    <navigation-rule>
        <from-view-id>/reposicion/*</from-view-id>
        <navigation-case>
            <from-outcome>inicio</from-outcome>
            <to-view-id>/reposicion/lista/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>detalleReposicion</from-outcome>
            <to-view-id>/reposicion/detalle/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>productoReposicion</from-outcome>
            <to-view-id>/reposicion/producto/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>opcionesReposicion</from-outcome>
            <to-view-id>/reposicion/opciones/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>crearReposicion</from-outcome>
            <to-view-id>/reposicion/crear/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>productosReposicion</from-outcome>
            <to-view-id>/reposicion/crear/producto/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>opcionReposicion</from-outcome>
            <to-view-id>/reposicion/crear/opcion/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <!-- Finalizan reglas reposicion -->
    <!-- Inician reglas conteos -->
    <navigation-rule>
        <from-view-id>/inventario/*</from-view-id>
        <navigation-case>
            <from-outcome>conteos</from-outcome>
            <to-view-id>/inventario/conteos/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>contar</from-outcome>
            <to-view-id>/inventario/contar/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>detalle</from-outcome>
            <to-view-id>/inventario/detalle/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <!-- Finalizan reglas conteos -->
    <!--Inicia reglas cotizaciones-->
    <navigation-rule>
        <from-view-id>/ventas/*</from-view-id>
        <navigation-case>
            <from-outcome>clientes</from-outcome>
            <to-view-id>/clientes/administrar/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>venta</from-outcome>
            <to-view-id>/ventas/crear/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>cotizaciones</from-outcome>
            <to-view-id>/ventas/cotizaciones/lista/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>demostraciones</from-outcome>
            <to-view-id>/ventas/demostraciones/lista/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>crearNota</from-outcome>
            <to-view-id>/ventas/notasCredito/crear/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <!-- Finalizan reglas cotizaciones-->
    <!--Inicia reglas clientes-->
    <navigation-rule>
        <from-view-id>/clientes/*</from-view-id>
        <navigation-case>
            <from-outcome>cotizaciones</from-outcome>
            <to-view-id>/ventas/crear/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>crearNota</from-outcome>
            <to-view-id>/ventas/notasCredito/crear/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>cotizacionEspecial</from-outcome>
            <to-view-id>/ventas/cotizaciones/especial/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <!-- Finalizan reglas clientes-->
</faces-config>
